<% initialfollowstate = current_user.follows?(user) ? "followed" : "unfollowed"%>
<% buttontext = initialfollowstate == "followed" ? "Unfollow" : "Follow" %>
<button type="button"
        class="follow-toggle"
        value="<%= buttontext %>"
        data-userid="<%= user.id %>"
        data-initialfollowstate="<%= initialfollowstate %>"
></button>
